<?xml version="1.0" encoding="utf-8" ?>
<rxui:ReactiveContentPage
    x:TypeArguments="vm:ICreateFolderViewModel"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Camelotia.Presentation.Xamarin.Views.CreateFolderView"
    xmlns:vm="clr-namespace:Camelotia.Presentation.Interfaces;assembly=Camelotia.Presentation"
    xmlns:rxui="clr-namespace:ReactiveUI.XamForms;assembly=ReactiveUI.XamForms"
    xmlns:controls="clr-namespace:Camelotia.Presentation.Xamarin.Controls"
    Title="Create Folder">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Start">
            <Frame VerticalOptions="StartAndExpand" 
                   HorizontalOptions="FillAndExpand"
                   Margin="15">
                <StackLayout>
                    <Label x:Name="ErrorLabel" Margin="0, 15" TextColor="Red" />
                    <Label Text="Please, enter new folder name:" Margin="0, 5, 0, 0" />
                    <Entry x:Name="NameEntry" />
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="3*" />
                            <ColumnDefinition Width="2*" />
                        </Grid.ColumnDefinitions>
                        <controls:AccentButton 
                            Grid.Column="0"
                            x:Name="CreateFolderButton"
                            Text="Create folder"
                            Margin="0, 10, 10, 10" />
                        <Button Grid.Column="1"
                                x:Name="CloseButton"
                                Margin="0, 10"
                                Text="Close" />
                    </Grid>
                </StackLayout>
            </Frame>
        </StackLayout>
    </ContentPage.Content>
</rxui:ReactiveContentPage>